<Window x:Class="MainGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainGUI"
        mc:Ignorable="d"
        Title="Modnix" Height="450" Width="800">
   <TabControl>
      <TabItem Header="Mods">
         <Grid>
            <Grid.ColumnDefinitions>
               <ColumnDefinition/>
               <ColumnDefinition Width="5" MinWidth="5" MaxWidth="5"/>
               <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DockPanel Margin="10">
               <StackPanel DockPanel.Dock="Top" VerticalAlignment="Top">
                  <RichTextBox x:Name="richAppInfo" Height="50" IsReadOnly="True">
                     <FlowDocument>
                        <Paragraph>
                           <Run Text="Modder&#10;Ver 1.0&#10;Status: Requires Setup"/>
                        </Paragraph>
                     </FlowDocument>
                  </RichTextBox>
                  <Grid Margin="0,10" AutomationProperties.AcceleratorKey="D">
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition/>
                     </Grid.ColumnDefinitions>
                     <Button x:Name="ButtonSetup" Content="Setup" Margin="0" VerticalAlignment="Top"  Padding="10,5"/>
                     <Button x:Name="ButtonModDir" Grid.Column="2" Margin="0" VerticalAlignment="Top"  Padding="10,5">
                        <AccessText>Mod _Directory</AccessText>
                     </Button>
                     <Button x:Name="ButtonNexus" Grid.Column="4" Margin="0" VerticalAlignment="Top"  Padding="10,5">
                        <AccessText>_Nexus Mods</AccessText>
                     </Button>
                  </Grid>
                  <RichTextBox x:Name="richGameInfo" Height="50" Margin="0,10,0,0" IsReadOnly="True">
                     <FlowDocument>
                        <Paragraph>
                           <Run Text="Phoenix Point&#10;Ver 1.0"/>
                        </Paragraph>
                     </FlowDocument>
                  </RichTextBox>
                  <Grid Margin="0,10,0,8">
                     <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                     </Grid.RowDefinitions>
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition/>
                     </Grid.ColumnDefinitions>
                     <Button x:Name="ButtonWebsite" Margin="0" VerticalAlignment="Top"  Padding="10,5" Click="ButtonWebsite_Click">
                        <AccessText>_Website</AccessText>
                     </Button>
                     <Button x:Name="ButtonManual" Grid.Column="2" Margin="0" VerticalAlignment="Top"  Padding="10,5" Click="ButtonManual_Click">
                        <AccessText>_Manual</AccessText>
                     </Button>
                     <Button x:Name="ButtonCanny" Grid.Column="4" Margin="0" VerticalAlignment="Top"  Padding="10,5" Click="ButtonCanny_Click">
                        <AccessText>_Canny</AccessText>
                     </Button>
                     <Button x:Name="ButtonForum" Margin="0" VerticalAlignment="Top" Grid.Row="2"  Padding="10,5" Click="ButtonForum_Click">
                        <AccessText>_Forum</AccessText>
                     </Button>
                     <Button x:Name="ButtonReddit" Grid.Column="2" Margin="0" VerticalAlignment="Top" Grid.Row="2"  Padding="10,5" Click="ButtonReddit_Click">
                        <AccessText>_Reddit</AccessText>
                     </Button>
                     <Button x:Name="ButtonDiscord" Grid.Column="4" Margin="0" VerticalAlignment="Top" Grid.Row="2"  Padding="10,5" Click="ButtonDiscord_Click">
                        <AccessText>_Discord</AccessText>
                     </Button>
                  </Grid>
               </StackPanel>
               <RichTextBox x:Name="richModInfo" VerticalAlignment="Top" IsReadOnly="True" Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
                  <FlowDocument>
                     <Paragraph>
                        <Run Text="Select a Mod&#xA;Ver 1.2.3.4&#x9;Built 2020-12-12 12:34 Z&#x9;Size 12KB&#xA;Type PPML"/>
                     </Paragraph>
                     <Paragraph>
                        <Run Text="MANUALLY DISABLED"/>
                     </Paragraph>
                     <Paragraph>
                        <Run Text="Author&#x9;Sheepy&#xA;Lang&#x9;en,fr,de,zh&#xA;Mod Description&#xA;Link 1&#xA;Link 2&#xA;Link 3"/>
                     </Paragraph>
                  </FlowDocument>
               </RichTextBox>
            </DockPanel>
            <GridSplitter x:Name="gridSplitter" Grid.Column="1" HorizontalAlignment="Center" Margin="0,10" VerticalAlignment="Center" Width="5" Height="440"/>
            <DockPanel Grid.Column="2" Margin="10">
               <DockPanel DockPanel.Dock="Top">
                  <Label x:Name="label" Content="Total Mods: 12&#10;Enabled: 10 &#09;Disabled: 2" Grid.Column="2" Margin="0" VerticalAlignment="Top"/>
                  <Button x:Name="ButtonAddMod" HorizontalAlignment="Right" DockPanel.Dock="Right" Padding="10,5">
                     <AccessText>_Add Mod</AccessText>
                  </Button>
               </DockPanel>
               <Grid DockPanel.Dock="Bottom">
                  <Grid.ColumnDefinitions>
                     <ColumnDefinition/>
                     <ColumnDefinition Width="10"/>
                     <ColumnDefinition/>
                  </Grid.ColumnDefinitions>
                  <Button x:Name="ButtonModDisable" Content="Disable" Padding="5" />
                  <Button x:Name="ButtonModDelete" Content="Delete" Grid.Column="2" Padding="5" />
               </Grid>
               <DataGrid x:Name="dataGrid" Margin="-2,10,0,10"/>
            </DockPanel>
         </Grid>
      </TabItem>
      <TabItem Header="Language" Visibility="Collapsed">
         <Grid Margin="10">
            <Grid.ColumnDefinitions>
               <ColumnDefinition/>
               <ColumnDefinition Width="10"/>
               <ColumnDefinition/>
               <ColumnDefinition Width="10"/>
               <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ButtonLangAuto" Content="Auto" Margin="0"/>
            <Button x:Name="ButtonLangEn" Content="English" Grid.Column="2" Margin="0"/>
            <Button x:Name="ButtonLangZh" Content="中文" Grid.Column="4" Margin="0"/>
         </Grid>
      </TabItem>
      <TabItem Header="Credits">
         <RichTextBox x:Name="richTextBox3" Margin="10">
            <FlowDocument>
               <Paragraph>
                  <Run Text="Injector and Loader based on PPML by RealityMachina."/>
               </Paragraph>
            </FlowDocument>
         </RichTextBox>
      </TabItem>
   </TabControl>
</Window>